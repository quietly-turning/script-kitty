<div class="row">
	<div class="small-12 columns">

		<% if current_user.admin %>
			<h1>All Queries</h1>

			<table>
			  <thead>
			    <tr>
				  <th>ID</th>
			      <th>Raw SQL</th>
				  <th>Status</th>
			      <th>User Email</th>
				  <th>Exercise ID</th>
			      <th colspan="3">manage</th>
			    </tr>
			  </thead>

			  <tbody>
			    <% @queries.each do |query| %>
			      <tr>
					<td><%= query.id %></td>
			        <td><%= query.raw_sql %></td>
					<td><%= give_meaning_to(query.status).html_safe %></td>
			        <td><%= query.user.email %></td>
					<td><%= query.exercise.id %></td>
			        <td><%= link_to 'Show', query %></td>
			        <td><%= link_to 'Edit', edit_query_path(query) %></td>
			        <td><%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>


		<% else %>

		<h1>My Progress</h1>

			<table>
			  <thead>
			    <tr>
				  <th>Exercise #</th>
				  <th>Lesson #</th>
			      <th>My Query</th>
				  <th>Status</th>
			    </tr>
			  </thead>

			  <tbody>
			    <% for i in 1..Exercise.all.size %>
				<% if @queries[i] %>
			    	<tr>
						<td><%= @queries[i].exercise.id %></td>
						<td><%= @queries[i].exercise.lesson.id %></td>
						<td><%= @queries[i].raw_sql %></td>
						<td><%= give_meaning_to(@queries[i].status).html_safe %></td>
			    	</tr>
				<% else %>
			    	<tr>
						<td><%= i %></td>
						<td><%= Exercise.find(i).lesson_id %></td>
						<td></td>
						<td><em>not completed yet!</em></td>
			    	</tr>
			    <% end %>
				<% end %>
			  </tbody>
			</table>


		<% end %>
	</div>
</div>
<div class="row">
	<div class="col-12">
		<h1>Schools</h1>
		<p><%= paginate @schools %></p>

		<table class="table">
		  <thead>
		    <tr>
				<th>id</th>
				<th>name</th>
				<th>city</th>
				<th>state</th>
				<th>zip</th>
				<th>chief</th>
				<th>locale_id</th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @schools.each do |school| %>
		      <tr>
				<td><%= school.id %></td>
		        <td><%= school.name %></td>
		        <td><%= school.city %></td>
		        <td><%= school.state %></td>
		        <td><%= school.zip %></td>
		        <td><%= school.chief %></td>
		        <td><%= school.locale.id %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

		<p><%= paginate @schools %></p>
	</div>
</div>
<div class="row">
	<div class="small-12 columns">
		<h1>Schools</h1>
		<p><%= paginate @schools %></p>

		<table>
		  <thead>
		    <tr>
				  <th>ID</th>
			      <th>Name</th>
			      <th>City</th>
			      <th>State</th>
			      <th>Zip</th>
			      <th>Chief</th>
			      <th>Control ID</th>
			      <th>Locale ID	</th>
				<% if current_user and current_user.admin %>
		   			<th colspan="3">manage</th>
				<% end %>
		    </tr>
		  </thead>

		  <tbody>
		    <% @schools.each do |school| %>
		      <tr>
				<td><%= school.id %></td>
		        <td><%= school.name %></td>
		        <td><%= school.city %></td>
		        <td><%= school.state %></td>
		        <td><%= school.zip %></td>
		        <td><%= school.chief %></td>
		        <td><%= school.control.id %></td>
		        <td><%= school.locale.id %></td>
				<% if current_user and current_user.admin %>
			        <td><%= link_to 'Show', school %></td>
			        <td><%= link_to 'Edit', edit_school_path(school) %></td>
			        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
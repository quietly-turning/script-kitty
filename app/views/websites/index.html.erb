<div class="row">
	<div class="small-12 columns">
		<h1>Websites</h1>

		<p><%= paginate @websites %></p>


		<table>
		  <thead>
		    <tr>
			  <th>id</th>
		      <th>url</th>
			  <th>classification</th>
			  <th>school_id</th>
			  <% if current_user and current_user.admin %>
			  	<th colspan="3"></th>
			  <% end %>
		    </tr>
		  </thead>

		  <tbody>
		    <% @websites.each do |website| %>
		      <tr>
				<td><%= website.id %></td>
		        <td><%= website.url %></td>
				<td><%= website.classification %></td>
				<td><%= website.school_id %></td>
				<% if current_user and current_user.admin %>
		    		<td><%= link_to 'Show', website %></td>
			        <td><%= link_to 'Edit', edit_website_path(website) %></td>
			        <td><%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

		<br>

		<p><%= paginate @websites %></p>
		
	</div>
</div>
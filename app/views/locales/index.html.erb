<div class="row">
	<div class="col-12">
		<h1>Locales</h1>

		<table class="table table-bordered">
		  <thead class="thead-dark">
		    <tr>
				<th>id</th>
				<th>name</th>
				<th>description</th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @locales.each do |locale| %>
		      <tr>
				<td><%= locale.id %></td>
		        <td><%= locale.name %></td>
		        <td><%= locale.description %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
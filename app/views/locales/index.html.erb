<div class="row">
	<div class="small-12 columns">
		<h1>Locales</h1>

		<table>
		  <thead>
		    <tr>
				<th>ID</th>
				<th>Name</th>
				<th>Description</th>
				<% if current_user and current_user.admin %>
			  		<th colspan="3">manage</th>
				<% end %>
		    </tr>
		  </thead>

		  <tbody>
		    <% @locales.each do |locale| %>
		      <tr>
				<td><%= locale.id %></td>
		        <td><%= locale.name %></td>
		        <td><%= locale.description %></td>
				<% if current_user and current_user.admin %>
			        <td><%= link_to 'Show', locale %></td>
			        <td><%= link_to 'Edit', edit_locale_path(locale) %></td>
			        <td><%= link_to 'Destroy', locale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
<h1>conditions</h1>

<table>
  <thead>
    <tr>
      <th>Column</th>
      <th>Parameter</th>
      <th>Operator</th>
      <th>Query</th>
      <th>Complexoperator</th>
      <th colspan="3">manage</th>
    </tr>
  </thead>

  <tbody>
    <% @conditions.each do |condition| %>
      <tr>
        <td><%= condition.column %></td>
        <td><%= condition.parameter %></td>
        <td><%= condition.operator %></td>
        <td><%= condition.query %></td>
        <td><%= condition.complexOperator %></td>
        <td><%= link_to 'Show', condition %></td>
        <td><%= link_to 'Edit', edit_condition_path(condition) %></td>
        <td><%= link_to 'Destroy', condition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<% if not flash.empty? %>

	<% flash.each do |name, msg| %>

		<% if msg.is_a?(String) %>
			<div class="small-offset-2 small-8 columns">
	    		<div class="small-10 columns kitty-bubble bubbletype-success">
					<div class="message">
						<%=  msg %>

						<% if @next_lesson_to_try and @next_lesson_to_try < @lessons.size %>
							<br>
							You should continue with
							<%=link_to "Lesson " + @next_lesson_to_try.to_s + ".", lesson_path( Lesson.find(@next_lesson_to_try) ), :class => "message-anchor" %>
						<% end %>
					</div>
				</div>

				<div class="small-2 columns">
					<%= image_tag "kitty-success.png", :class => "kitty-image" %>
				</div>
			</div>
			<hr>
		<% end %>

	<% end %>
<% else %>
	<br><br>
<% end %>
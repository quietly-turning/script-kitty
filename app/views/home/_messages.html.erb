<% if not flash.empty? %>

	<% flash.each do |name, msg| %>

		<% if msg.is_a?(String) %>
			<div class="col-12 col-sm-3"></div>

    		<div class="col-8 col-sm-6 kitty-bubble bubbletype-success">
				<div class="message">
					<%=  msg %>

					<% if not current_user.admin and @next_lesson_to_try and @next_lesson_to_try < @lessons.size %>
						<br>
						You should continue with
						<%=link_to "Lesson " + @next_lesson_to_try.to_s, lesson_path( Lesson.find(@next_lesson_to_try) ), :class => "message-anchor" %>
						.
					<% end %>
				</div>
			</div>

			<div class="col-4 col-sm-3">
				<%= image_tag "kitty-success.png", :class => "kitty-image" %>
			</div>

			<hr>
		<% end %>

	<% end %>
<% end %>
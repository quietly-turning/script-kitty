<div class="row">
	<div class="small-12 columns">
		<h1>Controls</h1>

		<table>
		  <thead>
		    <tr>
			  <th>id</th>
		      <th>name</th>
		      <th>description</th>
			  <% if current_user and current_user.admin %>
		      <th colspan="3">manage</th>
			  <% end %>
		    </tr>
		  </thead>

		  <tbody>
		    <% @controls.each do |control| %>
		      <tr>
				<td><%= control.id %></td>
		        <td><%= control.name %></td>
		        <td><%= control.description %></td>
				<% if current_user and current_user.admin %>
			        <td><%= link_to 'Show', control %></td>
			        <td><%= link_to 'Edit', edit_control_path(control) %></td>
			        <td><%= link_to 'Destroy', control, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>